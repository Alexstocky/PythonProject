grid = grid(10,10,7,[])
print(grid.dirtlist)



canvas.pack(side=LEFT)


#Right side of the interface where it will be displayed buttons, etc.
RightFrame= Frame(window, width = 350, height = 650, relief = "raise")
#Start button 
sbutton = Button(window, text = "Start", command = grid)
sbutton.pack(side = TOP)
 

 #In Progress.


def on_closing():
    if messagebox.askokcancel("Quit", "Do you want to quit?"):
        window.destroy()
#Quit button
endbutton = Button(window,text = "Quit", command = on_closing)
endbutton.pack(side = BOTTOM)


RightFrame.pack()
#end of the GUI window
window.protocol("WM_DELETE_WINDOW", on_closing)
window.mainloop()
